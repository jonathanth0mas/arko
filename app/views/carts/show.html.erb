<%= render 'shared/navv' %>
<h1 class="text-center">Your Order</h1>

<% if @order_items.size == 0 %>
	<p class="text-center">There are no items in your order</p>
<% end %>

<div class="shopping-cart col-lg-7">
  	<%= render "shared/shopping_cart" %>
</div>

<% if @order_items.size > 0 %>
	<div class="col-lg-4 summary">
		<h3>Summary</h3>
<!-- 		<p>Your total: <%= number_to_currency current_order.subtotal %></p>
 -->		<%= form_tag("/orders/complete/", :method => "post") do %>
				<div class="cart-info">
					<h5>Pick Up</h5>
					<div>
						<span>Date: </span>
						<%= text_field(:order, :date, class: "datepicker") %>
					</div>
					<div>
						<span>Time: </span>
						<%= text_field(:order, :time, class: "timepicker") %>
					</div>
					
					<%= submit_tag("Place Order" , class: "btn btn-success") %>
					
				</div>

				<p class="update-p"></p>
		<% end %>

	</div>
<% end %>



<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
    $('.timepicker').timepicker({
    	minTime: '10:30',
    	maxTime: '07:00pm'
    });
  });
</script>