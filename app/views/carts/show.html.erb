<h1 class="text-center">Your Order</h1>

<div class="shopping-cart col-lg-7">
  	<%= render "shared/shopping_cart" %>
</div>

<div class="col-lg-4 summary">
	<% if @order_items.size > 0 %>
		<h3>Summary</h3>

		<%= form_tag("/orders/complete/", :method => "post") do %>
				<div class="cart-info">
					<h5>Pick Up</h5>
					<div>
						<span>Date: </span>
						<%= text_field(:order, :date, class: "datepicker") %>
					</div>
					<div>
						<span>Time: </span>
						<%= text_field(:order, :time, class: "timepicker") %>
					</div>
					<%= submit_tag("Place Order" , class: "btn btn-success") %>
				</div>
		<% end %>

	<% end %>
</div>



<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
    $('.timepicker').timepicker();
  });
</script>