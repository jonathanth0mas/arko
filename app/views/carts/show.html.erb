<div class="shopping-cart">
  <%= render "shared/shopping_cart" %>
</div>

<% if @order_items.size > 0 %>

	<%= form_tag("/orders/complete/", :method => "post") do %>
		<div class="row">
			<div class="col-md-offset-4 col-md-6">
				<%= submit_tag("Place Order" , class: "btn btn-success") %>
			</div>
		</div>
	<% end %>
		<%= form_for @order do |f| =>
			<%= f.text_field :date, :class => "datepicker" %>

		<% end %>
<% end %>

<script>
	  
	  $(function() {
	    $( ".datepicker" ).datepicker({minDate: 0, dateFormat: 'mm-dd-yy'});
	    	    
	  });
	   
	  </script>		
