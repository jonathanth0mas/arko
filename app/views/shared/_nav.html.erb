<% if logged_in? %>

<header>
	<h1><%= link_to "Arko", root_path %></h1>
	<nav>
		<div><%= link_to "Food", items_path %></div>
		<div><%= link_to "Log Out", logout_path, method: :delete %></div>
		<div class="cart-text"><%= render 'shared/cart_text' %></div> 
	</nav>
</header>

<% end %>

<% if logged_in? == false %>

<header>
	<h1><%= link_to "Arko", root_path %></h1>
	<nav>
		<div><%= link_to "Sign Up", signup_path %></div>
		<div><%= link_to "Log In", login_path %></div>
	</nav>
</header>

<% end %>