            </button>
            <a href="/"><%= image_tag("ARKO.png", size: "175x80", alt: "Arko Logo", class: "arko_logo") %></a> 
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <!-- Button trigger modal -->
                <li data-toggle="modal" data-target="#myModal" class="nav-modal">Sign Up</li>
                <li data-toggle="modal" data-target="#myMModal" class="nav-modal">Log In</li>
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<!-- Sign Up Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <ul class="list-group">
                  <% @user.errors.full_messages.each do |msg| %>
                    <li class="list-group-item list-group-item-danger"><%= msg %></li>
                  <% end %>
                </ul>

                <h1 class="text-center">Sign Up!</h1>

                <%= form_for @user do |f| %>
                    
                    <div class="form-group">
                        <%= f.text_field :first, placeholder: "First", class: "form-control"  %>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :last, placeholder: "Last", class: "form-control"  %>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :email, placeholder: "Email", class: "form-control"  %>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :address, placeholder: "Full Address", class: "form-control"  %>
                    </div>
                    <div class="form-group">
                        <%= f.text_field :phone_number, placeholder: "Phone Number", class: "form-control"  %>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :password, placeholder: "Password", class: "form-control"  %>
                    </div>
                    <div class="form-group">
                        <%= f.password_field :password_confirmation, placeholder: "Confirm Password", class: "form-control"  %>
                    </div>
                    <div class="text-center">
                    <%= f.submit "Sign Up", class: "btn btn-primary" %>
                    </div>
                <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Log In Modal -->
<div class="modal fade" id="myMModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
            <div class="col-lg-offset-4 col-lg-4">
                <h1 class="text-center">Welcome Kapamilya!</h1>


                <%= form_for :login, :url => create_login_path do |f| %>

                <div class="form-group">
                    <%= f.text_field :email, placeholder: "Email", class: "form-control" %>
                </div>


                <div class="form-group">
                    <%= f.password_field :password, placeholder: "Password", class: "form-control"  %>
                </div>

                <div class="text-center">
                    <%= f.submit "Log In", class: "btn btn-primary" %>
                </div>

                <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>


